<div class="container-fluid">
<h1>Register Customer</h1>
<div class="row">
  <form id="form-register" class="form-horizontal">
  <div class="form-group required">
    <label class="control-label col-sm-2">Name</label>
    <div class="col-sm-10">
      <input type="text" name="register[nickname]" class="form-control" value=""/>
    </div>
  </div>
  <div class="form-group required">
    <label class="control-label col-sm-2">Email</label>
    <div class="col-sm-10">
      <input type="text" name="register[email]" class="form-control" value=""/>
    </div>
  </div>
  <div class="form-group required">
    <label class="control-label col-sm-2">Password</label>
    <div class="col-sm-10">
      <input type="password" name="register[password]" class="form-control" value=""/>
    </div>
  </div>
  <div class="form-group required">
    <label class="control-label col-sm-2">Confirm password</label>
    <div class="col-sm-10">
      <input type="password" name="register[confirm_password]" class="form-control" value=""/>
    </div>
  </div>
  <div class="form-group required">
    <div class="col-sm-12 text-right">
      <a id="btn-register" class="btn btn-primary">Register</a>
    </div>
  </div>
</form>
</div>
</div>
